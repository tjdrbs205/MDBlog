<!-- 내 프로필 페이지 -->
<div class="card">
  <div class="card-header">
    <h3 class="mb-0">내 프로필</h3>
  </div>
  <div class="card-body">
    <% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% errors.forEach(error => { %>
        <li><%= error %></li>
        <% }) %>
      </ul>
    </div>
    <% } %>

    <form action="/auth/profile" method="POST">
      <% if (typeof csrfToken !== 'undefined') { %>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <% } %>

      <div class="row mb-4">
        <div class="col-md-3 text-center">
          <img
            src="/images/default-profile.png"
            alt="Profile"
            class="img-thumbnail rounded-circle mb-3"
            style="width: 150px; height: 150px; object-fit: cover"
          />
          <!-- 향후 프로필 이미지 업로드 기능 추가 예정 -->
          <div class="small text-muted">프로필 이미지</div>
        </div>

        <div class="col-md-9">
          <div class="mb-3">
            <label for="username" class="form-label">사용자 이름</label>
            <input
              type="text"
              class="form-control"
              id="username"
              name="username"
              value="<%= user.username %>"
              required
            />
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">이메일</label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              value="<%= user.email %>"
              required
            />
          </div>

          <div class="mb-3">
            <label for="bio" class="form-label">소개</label>
            <textarea class="form-control" id="bio" name="bio" rows="3">
<%= user.bio || '' %></textarea
            >
            <div class="form-text">자신을 소개하는 짧은 글을 작성해보세요.</div>
          </div>
        </div>
      </div>

      <div class="d-flex justify-content-between">
        <a href="/auth/change-password" class="btn btn-outline-secondary">
          <i class="bi bi-key me-1"></i>비밀번호 변경
        </a>
        <button type="submit" class="btn btn-primary">
          <i class="bi bi-save me-1"></i>프로필 저장
        </button>
      </div>
    </form>
  </div>
</div>

<div class="card mt-4">
  <div class="card-header">
    <h3 class="mb-0">계정 정보</h3>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <p>
          <strong>가입일:</strong> <%= new
          Date(user.createdAt).toLocaleDateString() %>
        </p>
        <p>
          <strong>마지막 로그인:</strong> <%= user.lastLogin ? new
          Date(user.lastLogin).toLocaleDateString() : '정보 없음' %>
        </p>
      </div>
      <div class="col-md-6">
        <p>
          <strong>계정 유형:</strong> <%= user.role === 'admin' ? '관리자' :
          '일반 사용자' %>
        </p>
        <p>
          <strong>작성한 글:</strong>
          <a href="/posts/my-posts"><%= user.postCount || 0 %>개의 게시물</a>
        </p>
      </div>
    </div>
  </div>
</div>
