<% categories.forEach(category => { %>
<li class="category-item">
  <div class="category-info">
    <span class="category-name"><%= category.name %></span>
    <% if (category.children && category.children.length > 0) { %>
    <span class="badge"><%= category.children.length %></span>
    <% } %>
  </div>
  <div class="category-actions">
    <button
      class="btn btn-edit edit-category"
      data-id="<%= category._id %>"
      data-name="<%= category.name %>"
      <%
      if
      (category.parent)
      {
      %
    >
      data-parent="<%= category.parent %>"<% } %>> 수정
    </button>
    <form
      action="/categories/<%= category._id %>?_method=DELETE"
      method="POST"
      onsubmit="return confirm('정말 삭제하시겠습니까?');"
    >
      <button type="submit" class="btn btn-delete">삭제</button>
    </form>
  </div>
</li>
<% if (category.children && category.children.length > 0) { %>
<li>
  <ul>
    <%- include('_category_tree', { categories: category.children, depth: depth
    + 1 }) %>
  </ul>
</li>
<% } %> <% }); %>
